{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile JADE agents with GUI",
      "type": "shell",
      "command": "javac",
      "args": [
        "-encoding",
        "UTF-8",
        "-cp",
        "lib/jade.jar",
        "-d",
        "bin",
        "src/gui/*.java",
        "src/agents/*.java",
        "src/utils/*.java",
        "src/MainContainer.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run JADE 150x150 Minimal Test",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "chcp 65001 && java -Xmx4g -Dfile.encoding=UTF-8 -Dconsole.encoding=UTF-8 -Duser.language=el -Duser.country=GR -Dswing.systemlaf=javax.swing.plaf.nimbus.NimbusLookAndFeel -Dawt.useSystemAAFontSettings=on -Dswing.aatext=true -cp bin;lib/jade.jar jade.Boot -gui -agents firecontrol:agents.FireControlAgent;weather:agents.WeatherAgent;truck1:agents.FireTruckAgent;truck2:agents.FireTruckAgent;truck3:agents.FireTruckAgent;truck4:agents.FireTruckAgent;truck5:agents.FireTruckAgent;aircraft1:agents.AircraftAgent;aircraft2:agents.AircraftAgent;aircraft3:agents.AircraftAgent;helicopter1:agents.HelicopterAgent;helicopter2:agents.HelicopterAgent;helicopter3:agents.HelicopterAgent;crew1:agents.GroundCrewAgent(suppression);crew2:agents.GroundCrewAgent(prevention);crew3:agents.GroundCrewAgent(mop-up);crew4:agents.GroundCrewAgent(suppression);crew5:agents.GroundCrewAgent(suppression);emergency1:agents.EmergencyResponseAgent;fire1:agents.FireAgent(75,75);fire2:agents.FireAgent(25,25);fire3:agents.FireAgent(125,125)"
      ],
      "group": "test",
      "dependsOn": "Compile JADE agents with GUI"
    },
    {
      "label": "Run JADE 150x150 Sample Grid (1000 trees)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "chcp 65001 && java -Xmx8g -Dfile.encoding=UTF-8 -Dconsole.encoding=UTF-8 -Duser.language=el -Duser.country=GR -Dswing.systemlaf=javax.swing.plaf.nimbus.NimbusLookAndFeel -Dawt.useSystemAAFontSettings=on -Dswing.aatext=true -cp bin;lib/jade.jar MainContainer 1000"
      ],
      "group": "test",
      "dependsOn": "Compile JADE agents with GUI"
    },
    {
      "label": "Run JADE 150x150 Full Grid (All 22500 trees)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "chcp 65001 && echo WARNING: This will create 22500 tree agents and may require 16GB+ RAM && java -Xmx16g -Dfile.encoding=UTF-8 -Dconsole.encoding=UTF-8 -Duser.language=el -Duser.country=GR -Dswing.systemlaf=javax.swing.plaf.nimbus.NimbusLookAndFeel -Dawt.useSystemAAFontSettings=on -Dswing.aatext=true -cp bin;lib/jade.jar MainContainer full"
      ],
      "group": "test",
      "dependsOn": "Compile JADE agents with GUI"
    }
  ]
}
